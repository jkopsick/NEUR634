// LOAD NEURON MENU FILEload_file("nrngui.hoc")		// neuron main menunrnmainmenu()// LOAD GEOMETRY AND SIMULATION FILESxopen("ri04.nrn")			// geometryxopen("ri04_pp.hoc")		// point processesxopen("ri04_iofiles.hoc")	// file names for ioxopen("ri04_obj.hoc")		// additional objects (specific to geometry)xopen("ri04_memb.hoc")		// membrane mechanisms (was init)xopen("ri04_func.hoc")		// geometry-independent functionsxopen("ri04_windows.hoc")	// windows// FINE TUNE THE GEOMETRYaccess soma.secarea(0.5)					// due to an idiosynchrosy of NEURON, you have to do the area call firstcorrectsoma()				// correct for the fact that the soma is elliptical rather than cylindricalresegment()					// resegment the model to increase spatial accuracy// CHOOSE THE MEMBRANE PROPERTIESipass=2						// equals 1 for uniform Rm, 2 for nonuniform Rminit_h=5					// equals 1 for uniform Ih, =5 for nonuniform Ihhblock=0					// between 0 and 1, for fraction of H conductance blockedfig=6						// figure number// CHOOSE THE TYPE OF SIMULATIONinject_where=0				// 0 for somatic current injection, 1 for dend current injectionwriteout = 0    			// equals 1 if simulation output should be written to a filemakeplot = 0				// equals 1 if you want to generate an output file for a plotusecvode = 0				// use variable time step method// INITIALIZE THE MEMBRANEinit_params()				// this initializes critical parametersinsert_pass()				// insert and initialize passive membraneif (hblock==1) {	init_h=0}if (init_h>0) {  	insert_h()				// insert and iinitialize H conductance}init()// SIMULATION FOR FIGURES 6-7 (SYNAPTICS)dt=0.1tstop=100steps_per_ms=1/dtscreen_update_invl=0.1syn_locations()syn7=1// 40 SYNAPSES IN THE APICAL TUFT (FIGURE 6)if (fig==6) {	syn6_cc(0.5, 0.0001, 0.5, 5, 0, 5)	// send location, gmax (mS), tau0, tau1, erev, delay}// SINGLE SYNAPSES AT VARIOUS LOCATIONS (FIGURE 7)if (fig==7) {	syn7A_cc(0.5, 0.001, 0.5, 5, 0, 5)	// send location, gmax (mS), tau0, tau1, erev, delay}do_windows()