// LOAD NEURON MENU FILEload_file("nrngui.hoc")		// neuron main menu and some key parameter init (must come first)nrnmainmenu()// LOAD GEOMETRY AND SIMULATION FILESxopen("ri06.nrn")			// geometryxopen("ri06_pp.hoc")		// point processesxopen("ri06_iofiles.hoc")	// file names for ioxopen("ri06_obj.hoc")		// additional objects (specific to geometry)xopen("ri06_memb.hoc")		// membrane mechanisms (was init)xopen("ri06_func.hoc")		// geometry-independent functionsxopen("ri06_windows.hoc")	// windows// FINE TUNE THE GEOMETRYaccess soma.secarea(0.5)					// due to an idiosynchrosy of NEURON, you have to do the area call firstcorrectsoma()				// correct for the fact that the soma is elliptical rather than cylindrical// resegment()					// resegment the model to increase spatial accuracy// CHOOSE THE MEMBRANE PROPERTIESipass=2						// =1 for uniform Rm, =2 for nonuniform Rminit_h=5					// =1 for uniform Ih, =2 for nonuniform Ihhblock=0					// between 0 and 1, for fraction blocked. use as 0 or 1fig=6						// figure number// CHOOSE THE TYPE OF SIMULATIONinject_where=0				// 0 for somatic current injection, 1 for dend current injectionwriteout = 0    			// equals 1 if simulation output should be written to a filemakeplot = 0				// equals 1 if you want to generate an output file for a plotusecvode = 0				// use variable time step method// INITIALIZE THE MEMBRANEinit_params()			// initialize parameter valuesinsert_pass()			// insert passive membraneif (hblock==1) {	init_h=0}if (init_h>0) {  	insert_h()			// insert h conductance}init()// SIMULATION FOR FIGURES 6-7 (SYNAPTICS)dt=0.1tstop=100steps_per_ms=1/dtscreen_update_invl=0.1syn_locations()syn7=1// 40 SYNAPSES IN THE APICAL TUFT (FIGURE 6)if (fig==6) {	syn6_cc(0.5, 0.0001, 0.5, 5, 0, 5)	// send location, gmax (mS), tau0, tau1, erev, delay}// SINGLE SYNAPSES AT VARIOUS LOCATIONS (FIGURE 7)if (fig==7) {	syn7A_cc(0.5, 0.001, 0.5, 5, 0, 5)	// send location, gmax (mS), tau0, tau1, erev, delay}do_windows()